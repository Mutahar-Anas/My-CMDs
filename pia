#PIA VPN start

piactl login PIA/Login

clear
#do you want to start
echo "pick 'c' to connect or pick 'd' to disconnect"
read YN

clear
echo "Ok!"

if [ $YN = 'c' ] || [ $YN = 'C' ]
then
        sleep .2
        clear
        sleep .2
        echo "This Will Take A Few Seconds"
        piactl connect
        sleep 3
        piactl get connectionstate
        piactl get region
        piactl get vpnip
fi

if [ $YN = 'd' ] || [ $YN = 'D' ]
    then
       sleep .2
       clear
       sleep .2
       echo 'Disconnecting'
        piactl disconnect
        sleep 2
        piactl get connectionstate
fi
