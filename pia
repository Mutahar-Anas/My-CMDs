#PIA VPN
piactl login PIA/Login
clear
#do you want to start
echo "pick 'c' to connect or pick 'd' to disconnect"
read YN
clear
echo "Ok!"
if [ $YN = 'c' ] || [ $YN = 'C' ]
then
sleep .2
clear
sleep .2
echo "This Will Take A Few Seconds"
piactl connect
sleep 3.4
piactl get connectionstate
sleep .3
piactl get region
sleep .3
piactl get vpnip
sleep .3
fi
if [ $YN = 'd' ] || [ $YN = 'D' ]
    then
sleep .2
clear
sleep .2
echo 'Disconnecting'
piactl disconnect
sleep 2
clear
piactl get connectionstate
fi
sleep 1
clear
